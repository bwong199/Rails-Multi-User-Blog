
<h1 class="col-md-6 col-md-offset-4">Edit User</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<form class="form-horizontal">
			<div class="form-group">
				<%= form_for(@user) do |f| %> 
				<%= f.label :email, "Email", class: "control-label col-sm-2" %> 
				<div class="col-sm-10">
					<%= f.email_field :email, class: "form-control"%> 
				</div>
			</div>
			<div class="form-group">
				<%= f.label :name, "Name", class: "control-label col-sm-2"   %> 
				<div class="col-sm-10">
					<%= f.text_field :name, class: "form-control" %> 
					<br>
				</div>	
				<div class="row">
					<div class="control-label col-sm-2">
						<%= f.submit "Update", class: "btn btn-primary" %>
						<% end %> 
					</div>
					<div class="control-label col-sm-2">
						<%= button_to "Delete Account", {:controller => :users,
							:action => 'destroy', :id => session[:user_id] }, :method => :delete, class: "btn btn-danger" %>
						</div>
					</div>
				</div>
			</div>