<!DOCTYPE html>
<html>
<head>
	<title>MultiUserBlog</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<% if flash[:errors] %>
	<%= flash[:errors] %>
	<% end %>

	<h1> User Blog </h1> 
	<% if current_user %>


	<%= button_to "Log Out", {:controller => :sessions,
      :action => 'destroy', :id => session[:user_id] }, :method => :delete %>
      <%= link_to "Edit Profile", edit_user_path(current_user) %>
	<% end %>
	
	<%= yield %>
</body>
</html>
